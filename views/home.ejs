<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/home.css">
</head>

<body>
    <h1 class="title">
        <%= title %>
    </h1>


    <section id="feed-posts">
        <h3>Posts</h3>
        <% if(locals.user){ %>
            <form action="/posts/create" id="new-post-form" method="post">
                <textarea name="content" id="content" cols="30" rows="3" placeholder="Type here...."
                    required></textarea>
                <button type="submit">Submit</button>
            </form>
            <% } %>
    </section>

    <div id="home-container">
        <div id="feed-posts">
            <h3>All Posts: </h3>
            <% for (post of posts){ %>
                <p>
                    <% if((locals.user) && (locals.user.id==post.user.id)){ %>
                        <small>
                            <a href="/posts/destroy/<%= post._id %>">X</a>
                        </small>
                        <% } %>
                            <%=post.content%> --
                                <%=post.user.name%>
                                    <div class="post-comments">
                                        <% if(locals.user){ %>
                                            <form action="/comments/create" id="new-post-form" method="post">
                                                <input type="text" name="content" id="content"
                                                    placeholder="Comment here...." required />
                                                <input type="hidden" name="post" value="<%= post._id %>">
                                                <button type="submit">Add Comment</button>
                                            </form>
                                            <% } %>

                                    </div>
                                    <div class="post-comment-list">
                                        <ul id="post-comments-<%= post._id %>">

                                            <p>
                                                <% for(let comment of post.comments){ %>
                                                    <%=console.log(comment._id)%>
                                                        <% if((locals.user) && (locals.user.id==comment.user.id)){ %>
                                                            <small>
                                                                <a href="/comments/destroy/<%=comment._id %>">X</a>
                                                            </small>
                                                            <% } %>
                                                                <%=comment.content%> --
                                                                    <small>
                                                                        <%=comment.user.name%>
                                                                    </small>
                                            </p>
                                            <% } %>
                                        </ul>
                                    </div>
                </p>
        </div>
        <section id="user-freinds">
            <h4>Freinds</h4>
            <% for(u of all_users){ %>
                <p>
                    <a href="/users/profile/<%= u.id %>">
                        <%=u.name %>
                    </a>
                </p>
                <% } %>
        </section>
        <% } %>
    </div>

</body>

</html>